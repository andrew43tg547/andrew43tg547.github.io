      transition: all 0.3s ease;
    }

    h1 {
      color: #c2185b;
      margin-bottom: 1rem;
    }

    .button {
      position: relative;
      height: 60px;
      margin-top: 1.5rem;
    }

    button {
      background: linear-gradient(to right, #eb5a8a, #a99ba0);
      border: none;
      padding: 0.8rem 1.5rem;
      border-radius: 30px;
      color: white;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.2s ease;
      position: absolute;
    }

    button:hover {
      background: #c2185b;
    }

    .mensaje {
      margin-top: 20px;
