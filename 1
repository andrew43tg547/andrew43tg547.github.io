      justify-content: center;
      align-items: center;
      height: 100vh;
      flex-direction: column;
    }

    .container, .ticket {
      background: white;
      padding: 2rem;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
      text-align: center;
      max-width: 90%;
