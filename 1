<body>

  <div class="container" id="declaracion">
    <h1>¿Quieres salir conmigo?</h1>
    <div class="button">
      <button style="left: 20%;" onclick="responderSi()">Sí ❤️</button>
      <button id="btnNo" style="left: 60%;" onclick="responderNo()">No 😢</button>
    </div>
    <div class="mensaje" id="mensaje"></div>
  </div>

  <div class="ticket" id="ticket">
    <h1>🎟 Cita Confirmada 🎟</h1>
    <p>¡Prepárate para nuestra cita especial! 🍿🎬</p>
    <p><strong>Lugar:</strong> Cine</p>
    <p><strong>Hora:</strong> 08:00 pm</p>
    <p><strong>¡No faltes! ❤️</strong></p>
  </div>

  <script>
    let contador = 0;
    const btnNo = document.getElementById("btnNo");
    const mensaje = document.getElementById("mensaje");
    const declaracion = document.getElementById("declaracion");
    const ticket = document.getElementById("ticket");

    const respuestas = [
      "¿Amiga, pa' llantear pe? 🥺",
      "Ya pues, dime que sí 🥺",
      "Amiga... llantis llantis pe 😘",
      "Piénsalo bien, no te vas a arrepentir...",
      "No te botes pe, anda di que sí 😌",
      "acepta p puta",
      "eres una perra si no aceptas"  
    ];

    // Cuando le da clic a "Sí"
    function responderSi() {
      declaracion.style.display = 'none';
      ticket.style.display = 'block';
    }

    // Cuando intenta darle clic a "No"
    function responderNo() {
      contador++;
      mensaje.textContent = respuestas[Math.min(contador, respuestas.length - 1)];

      // Mover botón a una posición aleatoria
      const container = document.querySelector(".button");
      const maxWidth = container.offsetWidth - btnNo.offsetWidth;
      const maxHeight = container.offsetHeight - btnNo.offsetHeight;

      const randomX = Math.random() * maxWidth;
      const randomY = Math.random() * maxHeight;

      btnNo.style.left = `${randomX}px`;
      btnNo.style.top = `${randomY}px`;
    }
  </script>

</body>
</html>
